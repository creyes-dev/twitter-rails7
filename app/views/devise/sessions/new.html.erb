<div class="auth-form">
  <div class="text-center mb-3">
		<a href="index.html"><img src="/assets/logo-full.png" alt=""></a>
	</div>
  <h4 class="text-center mb-4">Inicia sesión con tu cuenta</h4>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <div class="mb-3">
          <label class="mb-1"><strong>Email</strong></label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "nombre@example.com", class: "form-control" %>
      </div>
      <div class="mb-3">
          <label class="mb-1"><strong>Password</strong></label>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <div class="text-center mt-4 mb-3">
          <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
      </div>
  <% end %>

  <% if !notice.nil? %>
    <div class="alert alert-info solid alert-dismissible fade show">
      <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="me-2"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg>
      <strong>Información!</strong> <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close">
      </button>
    </div>
  <% end %>

  <% if !alert.nil? %>
    <div class="alert alert-danger solid alert-dismissible fade show">
      <svg viewBox="0 0 24 24" width="24 " height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="me-2"><polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>
      <strong>Alerta</strong> <%= alert %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close">
      </button>
    </div>
  <% end %>

  <div class="new-account mt-3">
    <p>Olvidaste tu contraseña? Escribí a <a class="text-primary" href="page-login.html">creyes.dev@gmail.com</a></p>
  </div>
</div>
