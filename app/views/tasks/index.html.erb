<div id="matches">
  <p>
    <strong>Matches </strong>
    <ul>
      <% @matches.each do |match| %>
          <li>
            <p>round: <%= match.round.number %>
            <p>group: <%= match.competing_team_home.group.name %></p>
            <p>location: <%= match.stadium.name %>, <%= match.stadium.location.name %>, <%= match.datetime %></p>
            <p>match <%= match.name %>: <%= match.competing_team_home.team.name %> vs <%= match.competing_team_away.team.name %></p>
          </li>
      <% end %>
    </ul>
  </p>
</div>

<h1>Tasks</h1>

<p style="color: green"><%= notice %></p>

<%= form_with(model: @task, class: "bg-success") do |form| %>
  <div>
    <%= form.label "Lista" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>

<%= turbo_stream_from 'tasks' %>

<h3>TO DO</h3>
<%= turbo_frame_tag "todo_list" do %>
  <%= render @tasks %>
<% end %>

<h3>DONE</h3>
<%= turbo_frame_tag "done_list" do %>
  <%= render @done_tasks %>
<% end %>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>
